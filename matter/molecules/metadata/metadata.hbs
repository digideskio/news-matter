<ul class="metadata {{classes}}">
  {{#timestamp}}
    <li class="metadata__time">
      {{atom "ux-news-matter/icon" classes="icon--type" set="core" icon="duration"}} {{duration}}
    </li>
  {{/timestamp}}
  <li class="metadata__section">
    <a href="#">{{section}}</a>
  </li>
  {{#comments}}
    <li class="metadata__comments">
        {{atom "ux-news-matter/icon" classes="icon--type" set="social" icon="comments"}} {{count}}
    </li>
  {{/comments}}
</ul>
