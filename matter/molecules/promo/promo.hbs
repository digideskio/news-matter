<div class="promo">
  <div class="promo__thumb">
    {{#label}}
      {{atom "ux-news-matter/label" classes="promo__label"}}
    {{/label}}

    {{#media}}
      {{atom "ux-news-matter/image"}}
    {{/media}}
  </div>

  <div class="promo__body">
    <h3>{{headline}}</h3>

    {{#summary}}
      <p>{{text}}</p>
    {{/summary}}

    {{#contributor}}
      {{molecule "ux-news-matter/contributor"}}
    {{/contributor}}

    {{#metadata}}
      {{molecule "ux-news-matter/metadata"}}
    {{/metadata}}

    {{#see-also}}
      {{molecule "ux-news-matter/see_also"}}
    {{/see-also}}
  </div>
</div>
